<div class="container">

  <div class="row-md">
    <h1 class="teo">ジャンル一覧・追加</h1>
  </div>

  <!--ジャンル一覧の登録フォーム-->
  <div class="row-md">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <div class="form-group row">
        <%= f.label :ジャンル名, class: 'col-md-3 offset-1 text-center lead' %>
        <%= f.text_field :name, class: 'col-md-4' %>
        <%= f.submit :新規登録, class: 'btn btn-success col-md-2 offset-1' %>
      </div>
    <% end %>
  </div>

  <!--ジャンル一覧のテーブル-->
  <div class="row">
    <table class="table table-hover table-bordered">

      <thead class="domon">
        <tr>
          <th class="text-white">ジャンル</th>
          <th></th>
        </tr>
      </thead>

      <!--ジャンルの編集繰り返し-->
      <tbody class="haku">
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>

            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>

</div>
