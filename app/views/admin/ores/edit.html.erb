<div class="container">
  <div class="m-md-2"><br></div>
  <div class="row">

    <h4 class="col-md-2 mx-auto text-center teo">
      <strong>鉱石編集</strong>
    </h4>

    <div class="col-md-8"></div>
  </div>

  <div class="m-md-2"><br></div>

  <%= form_with model: @ore, url: admin_ore_path(@ore) do |f| %>

    <div class="form-group row">
      <div class="col-md-3"></div>

      <div class="col-md-1 text-left">
        <%= f.label :image, '鉱石画像' %>
      </div>

      <div class="col-md-8">
        <%= f.file_field :image, accept: "image/*", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"></div>

      <div class="col-md-1 text-left">
        <%= f.label :stone, '鉱石名' %>
      </div>

      <div class="col-md-8">
        <%= f.text_field :stone, placeholder: "鉱石名", required: true, size: "44" %>
      </div>
    </div>

   <div class="form-group row">
      <div class="col-md-3"></div>

      <div class="col-md-1 text-left">
        <%= f.label :introduction, '鉱石説明' %>
      </div>

      <div class="col-md-8">
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", required: true, size: "46x10" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"></div>

      <div class="col-md-1 text-left">
        <%= f.label :genre_id, 'ジャンル' %>
      </div>

      <div class="col-md-8">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name),prompt: "-- 選択してください --", required: true, class: "w-50" %>
      </div>
    </div>

   <div class="form-group row">
      <div class="col-md-3"></div>

      <div class="col-md-2 text-left">鉱石ステータス</div>

      <div class="col-md-7">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '上位' %>

        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '選外' %>
      </div>
    </div>

    <!--変更を保存ボタン-->
    <div class="row">
      <div class="action center-block mx-auto">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
    </div>

  <% end %>

</div>