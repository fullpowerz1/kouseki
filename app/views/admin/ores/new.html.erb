<div class="container">
  <div class="row">

    <h4 class="col-md-2 mx-auto text-center teo mt-5 mb-4 pikari ">
      <strong>鉱石一覧</strong>
    </h4>

  </div>

  <div class="col-md-6 mx-auto">
    <%= form_with model: @ore, url: admin_ores_path, method: :post do |f| %>

    <div class="form-group row">

      <div class="col-md-3 text-left">
        <%= f.label :image, '鉱石画像' %>
      </div>

      <div class="col-md-9">
        <%= f.file_field :image, accept: "image/*", required: true %>
      </div>
    </div>

    <div class="form-group row">

      <div class="col-md-3 text-left">
        <%= f.label :stone, '鉱石名' %>
      </div>

      <div class="col-md-9">
        <%= f.text_field :stone, placeholder: "鉱石名", required: true, size: "44" %>
      </div>
    </div>

    <div class="form-group row">

      <div class="col-md-3 text-left">
        <%= f.label :introduction, '鉱石説明' %>
      </div>

      <div class="col-md-9">
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", required: true, size: "46x10" %>
      </div>
    </div>

    <div class="form-group row">

      <div class="col-md-3 text-left">
        <%= f.label :genre_id, 'ジャンル' %>
      </div>

      <div class="col-md-9">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name),prompt: "-- 選択してください --", required: true, class: "w-50" %>
      </div>
    </div>

    <div class="form-group row">

      <div class="col-md-3 text-left">鉱石ステータス</div>

      <div class="col-md-9">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '上位' %>

        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '選外' %>

      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 text-left">タグ</div>

      <div class="col-md-9">
        <%= f.text_field :stone,value: @tag_list, class:"form-control" %>
      </div>

    </div>

    <!--新規登録ボタン-->
    <div class="row">
      <div class="action center-block mx-auto">
      <%= f.submit '新規登録', class: "btn btn-success mb-2" %>
      </div>
    </div>

  <% end %>
  </div>
</div>