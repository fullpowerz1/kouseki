<div class="container">
 <div class="m-md-2"><br></div>
 <div class="row">

     <h4 class="col-md-2 mx-auto text-center teo">
         <strong>鉱石詳細</strong>
     </h4>

     <div class="col-md-8"></div>
 </div>

 <div class="m-md-2"><br></div>

    <div class="row">

        <div class="col-md-5 mx-auto">
          <%= image_tag @ore.image, size:'300x200' %>
        </div>

        <div class="col-md-7 mx-auto">
            <table class="table table-hover table-bordered">

                <tbody>

                    <tr>
                        <td class="text-white font-weight-bold atora">鉱石名</td>
                        <!--半角スペース3つ-->
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td class="haku"><%= @ore.stone %></td>
                    </tr>

                    <td class="m-md-1"><br></td>

                    <tr>
                        <td class="text-white font-weight-bold atora">鉱石説明</td>
                        <!--半角スペース3つ-->
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td class="haku"><%= @ore.introduction %></td>
                    </tr>

                    <td class="m-md-1"><br></td>

                    <tr>
                        <td class="text-white font-weight-bold atora">ジャンル</td>
                        <!--半角スペース3つ-->
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td class="haku"><%= @ore.genre.name %></td>
                    </tr>

                    <td class="m-md-1"><br></td>

                    <tr>
                        <td class="text-white font-weight-bold atora">鉱石ステータス</td>
                        <!--半角スペース3つ-->
                        <td>&nbsp;&nbsp;&nbsp;</td>

                        <% if @ore.is_active == true %>
                            <td class="text-success font-weight-bold haku">上位</td>
                        <% else %>
                            <td class="text-danger haku">選外</td>
                        <% end %>
                    </tr>

                </tbody>

            </table>
        </div>

    </div>

   <div class="m-md-1"><br></div>

   <div class="row">

    <div class="action center-block mx-auto">
        <%= link_to '編集する',edit_admin_ore_path(@ore), class: 'btn btn-success btn-block' %>
    </div>

   </div>

 </div>

</div>