<div class="container">
 <div class="m-md-2"><br></div>
 <div class="row">

     <h4 class="col-md-2 mx-auto text-center teo pikari">
         <strong>鉱石詳細</strong>
     </h4>

     <div class="col-md-8"></div>
 </div>

 <div class="m-md-2"><br></div>

    <div class="row">

        <div class="col-md-5 mx-auto">
          <%= image_tag @ore.image, size:'300x200' %>
        </div>

        <div class="col-md-7 mx-auto">
            <table class="table table-hover table-bordered">

                <tbody>

                    <tr>
                        <td class="text-white font-weight-bold atora doyon">鉱石名</td>
                        <!--半角スペース3つ-->
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td class="haku"><%= @ore.stone %></td>
                    </tr>

                    <tr>
                        <td class="text-white font-weight-bold atora doyon">鉱石説明</td>
                        <!--半角スペース3つ-->
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td class="haku"><%= @ore.introduction %></td>
                    </tr>

                    <tr>
                        <td class="text-white font-weight-bold atora doyon">ジャンル</td>
                        <!--半角スペース3つ-->
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td class="haku"><%= @ore.genre.name %></td>
                    </tr>

                    <tr>
                        <td class="text-white font-weight-bold atora doyon">鉱石ステータス</td>
                        <!--半角スペース3つ-->
                        <td>&nbsp;&nbsp;&nbsp;</td>

                        <% if @ore.is_active == true %>
                            <td class="text-success font-weight-bold haku">上位</td>
                        <% else %>
                            <td class="text-danger haku">選外</td>
                        <% end %>
                    </tr>

                </tbody>

            </table>

          <div class="col-md-3 mx-auto float-left atiti mt-2">
            <%= link_to '編集する',edit_admin_ore_path(@ore), class: 'btn btn-success btn-block mb-3' %>
          </div>

        </div>

    </div>

   <div class="m-md-1"><br></div>

 </div>

</div>