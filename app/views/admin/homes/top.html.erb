<div class='container'>
  <div class="m-md-2"><br></div>
  <!--タイトル-->
  <div class="row">
    <div class="col-md-2"></div>
    <h4 class="col-md-2 mx-auto text-center teo">
      <strong>ランキング情報一覧</strong>
    </h4>

    <div class="col-md-8"></div>
  </div>

  <!--ランキングのテーブル-->
  <div class='row'>
    <div class='col-md-8 offset-md-1 pt-4'>
      <table class="havyarms">

        <thead class="araya text-white">
          <tr>
            <th class="kaiki">登録日時</th>
            <th class="kaiki">登録者</th>
            <th class="kaiki">登録個数</th>
            <th class="kaiki">順位</th>
          </tr>
        </thead>

        <!--ランキング情報の繰り返し処理-->
        <% @rankings.each do |ranking| %>
          <tbody class="haku">
            <tr>
              <td class="kaiki">
                <%= link_to ranking.set_date, admin_ranking_path(ranking.id) %>
              </td>

              <td class="kaiki">
                <%= ranking.customer.full_name %>
              </td>

              <td class="kaiki">
                <%= ranking.amount %>
              </td>

              <td class="kaiki">
                <%= ranking.rank_i18n %>
              </td>

            </tr>
          </tbody>
        <% end %>

      </table>
      <!--ページネーション-->
      <%= paginate @rankings %>
    </div>
  </div>

</div>