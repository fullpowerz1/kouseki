<div class="container">

  <div class="row mb-5">
    <h4 class="col col-md-2 offset-md-2 text-center mt-2 teo">
      <strong>新規会員登録</strong>
    </h4>
  </div>

  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>

    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row mt-4">
      <!--名前-->
      <div class="col-2">
        <span>名前</span>
      </div>

      <!--姓-->
      <div class="col-1">
        <%= f.label :"(姓)　" %>
      </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :last_name, autofocus: true, class: "name", placeholder: "令和" %>
      </div>

      <!--名-->
      <div class="col-1">
        <%= f.label :"(名)　" %>
      </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :first_name, autofocus: true, class: "name", placeholder: "道子" %>
      </div>
    </div>

    <!--フリガナ-->
    <div class="row mt-2">
      <div class="col-2">
        <span>フリガナ</span>
      </div>

    <!--セイ-->
      <div class="col-1">
        <%= f.label :"(セイ)" %>
      </div>

    <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :last_name_kana, autofocus: true, class: "name", placeholder: "レイワ" %>
      </div>

    <!--メイ-->
      <div class="col-1">
        <%= f.label :"(メイ)" %>
      </div>

    <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :first_name_kana, autofocus: true, class: "name", placeholder: "ミチコ" %>
      </div>
    </div>

     <div class="row mt-2">
        <!--メールアドレス-->
        <div class="col-3">
          <%= f.label :"メールアドレス" %>
        </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
     </div>


    <div class="row mt-2">
      <!--郵便番号-->
      <div class="col-3">
        <%= f.label :"郵便番号(ハイフンなし)" %>
      </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :post_code, autofocus: true, class: "name", placeholder: "0000000" %>
      </div>
    </div>


    <div class="row mt-2">
      <!--住所-->
      <div class="col-3">
        <%= f.label :"住所" %>
      </div>

      <!--入力欄-->
      <div class="col-8">
        <%= f.text_field :address, autofocus: true, class: "name", size: "65x5", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>


  <% end %>


</div>