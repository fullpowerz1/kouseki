<div class="container">

  <div class="row mb-5">
    <h4 class="col col-md-3 offset-md-3 text-center mt-3 teo pikari">
      <strong>新規会員登録</strong>
    </h4>
  </div>

  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>

    <%= render "public/shared/error_messages", resource: resource %>
9
    <div class="row mt-4">
      <!--名前-->
      <div class="col-2">
        <span>名前</span>
      </div>

      <!--姓-->
      <div class="col-1">
        <%= f.label :"(姓)　" %>
      </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :last_name, autofocus: true, class: "name", placeholder: "令和" %>
      </div>

      <!--名-->
      <div class="col-1">
        <%= f.label :"(名)　" %>
      </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :first_name, autofocus: true, class: "name", placeholder: "道子" %>
      </div>
    </div>

    <!--フリガナ-->
    <div class="row mt-2">
      <div class="col-2">
        <span>フリガナ</span>
      </div>

    <!--セイ-->
      <div class="col-1">
        <%= f.label :"(セイ)" %>
      </div>

    <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :last_name_kana, autofocus: true, class: "name", placeholder: "レイワ" %>
      </div>

    <!--メイ-->
      <div class="col-1">
        <%= f.label :"(メイ)" %>
      </div>

    <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :first_name_kana, autofocus: true, class: "name", placeholder: "ミチコ" %>
      </div>
    </div>

     <div class="row mt-2">
        <!--メールアドレス-->
        <div class="col-3">
          <%= f.label :"メールアドレス" %>
        </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
     </div>


    <div class="row mt-2">
      <!--郵便番号-->
      <div class="col-3">
        <%= f.label :"郵便番号(ハイフンなし)" %>
      </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :postal_code, autofocus: true, class: "name", placeholder: "0000000" %>
      </div>
    </div>


    <div class="row mt-2">
      <!--住所-->
      <div class="col-3">
        <%= f.label :"住所" %>
      </div>

      <!--入力欄-->
      <div class="col-8">
        <%= f.text_field :address, autofocus: true, class: "name", size: "65x5", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>

    <!--電話番号-->
    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :"電話番号(ハイフンなし)" %>
      </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.text_field :telephone_number, autofocus: true, class: "name", placeholder: "0000000000" %>
      </div>
    </div>

    <!--パスワード6文字-->
    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :"パスワード(6文字以上)" %>
      </div>

      <!--入力欄-->
      <div class="col-3">
        <% if @minimum_password_length %>
        <!--<em>( characters minimum)</em>-->
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <!--パスワード確認-->
    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :"パスワード(確認用)" %>
      </div>

      <!--入力欄-->
      <div class="col-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <!--新規登録-->
    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2">
        <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
      </div>
    </div>

  <% end %>

  <div class="row mb-2">
    <h5 class="col col-md-3 offset-md-3 text-center mt-4 teo">
      <strong>既に登録済みの方</strong>
    </h5>
  </div>

  <div class="row mb-5 mt-3">
    <div class="col col-md-6 offset-md-3">
      <p><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</p>
    </div>
  </div>

</div>