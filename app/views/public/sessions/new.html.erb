<div class="container">

  <div class="row mb-5">
    <h4 class="col col-md-2 offset-md-2 text-center mt-2 teo">
      <strong>ログイン</strong>
    </h4>
  </div>

  <div class="row mb-2">
    <h5 class="col col-md-2 offset-md-2 text-center teo">
      <strong>会員の方はこちらからログイン</strong>
    </h5>
  </div>

  <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>

    <%= render "public/shared/error_messages", resource: resource %>

        <!--メールアドレスのフィールド-->
        <div class="row mt-3">
          <div class="col-3"></div>
          <div class="col-2">
            <%= f.label :"メールアドレス", class:"houtou" %>
          </div>

          <div class="col-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", size: 50 %>
          </div>
        </div>

        <!--パスワードのフィールド-->
       <div class="row mt-3">
          <div class="col-3"></div>
          <div class="col-2">
            <%= f.label :"パスワード", class:"houtou" %>
          </div>

          <div class="col-3">
            <%= f.password_field :password, autocomplete: "current-password", size: 50 %>
          </div>
       </div>

        <!--ログインボタン-->
        <div class="row mt-5">
          <div class="col-5 mb-5"></div>
          <div class="col-2 mb-5">
            <%= f.submit "ログイン", class:"btn btn-primary btn-block" %>
          </div>
        </div>
  <% end %>

  <div class="row mb-2">
    <h5 class="col col-md-3 offset-md-3 text-center mt-4 teo">
      <strong>会員登録がお済みでない方</strong>
    </h5>
  </div>

  <!--新規登録-->
  <div class="row mb-5 mt-3">
    <div class="col col-md-8 offset-md-4">
      <p><%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。</p>
    </div>
  </div>

</div>