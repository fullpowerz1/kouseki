<div class="container">

  <div class="row mb-5">
    <h4 class="col col-md-2 offset-md-2 text-center mt-3 teo">
      <strong>会員情報編集</strong>
    </h4>
  </div>

  <div class="row mb-3">
    <div class="col col-md-8 offset-md-2">

      <%= form_with model: @customer, url: customers_information_path do |f| %>

        <div class="field">
          <%= f.label :"氏名　　　　　　　　　　" %>
          <%= f.text_field :last_name, autofocus: true, placeholder:"令和" %>
          <%= f.text_field :first_name, placeholder:"道子" %>
        </div>

        <div class="field">
          <%= f.label :"フリガナ　　　　　　　　" %>
          <%= f.text_field :last_name_kana, placeholder:"レイワ" %>
          <%= f.text_field :first_name_kana, placeholder:"ミチコ" %>
        </div>

        <div class="field">
          <%= f.label :"郵便番号　　　　　　　　" %>
          <%= f.text_field :postal_code, placeholder:"0000000" %>
        </div>

        <div class="field">
          <%= f.label :"住所　　　　　　　　　　" %>
          <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", size: 46 %>
        </div>

        <div class="field">
          <%= f.label :"電話番号　　　　　　　　" %>
          <%= f.text_field :telephone_number, placeholder:"0000000000" %>
        </div>

        <div class="field">
          <%= f.label :"メールアドレス　　　　　" %>
          <%= f.email_field :email, placeholder:"sample@example.com", size: 46 %>
        </div>

        <div class="row mb-2">
          <div class="actions col col-md-2 offset-md-4">
            <%= f.submit "編集内容を保存", class:"btn btn-success w-500" %>
          </div>

      <!--ここまで投稿フォーム-->
      <% end %>

          <div class="actions col col-md-4 offset-md-2">
            <%= link_to "　退会する　", customers_unsubscribe_path, class: "btn btn-danger" %>
          </div>

        </div>

    </div>

  </div>

</div>

