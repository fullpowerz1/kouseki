<div class="container">

  <div class="row mb-5">
    <h2 class="col col-md-2 offset-md-2 text-center mt-3 teo">
      <strong>装飾品編集</strong>
    </h2>
  </div>

  <!--装飾品一覧の編集フォーム-->
    <div class="col-md-7">
      <%= form_with model: @decoration, url: decoration_path(@decoration.id) do |f| %>
        <div class="form-group row">
          <%= f.label "鉱石名" %>
          <%= f.text_field :ore, placeholder: "ダイヤモンド", class: 'ml-3' %>
        </div>

        <div class="form-group row">
          <%= f.label "種類" %>
          <%= f.text_field :amulet, placeholder: "ネックレス", class: 'ml-3' %>
        </div>

        <div class="form-group row">
          <%= f.label "ニックネーム" %>
          <%= f.text_field :nickname, placeholder: "ガッチリ", class: 'ml-3' %>
        </div>

        <div class="form-group row">
          <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
        </div>

      <% end %>
    </div>

</div>